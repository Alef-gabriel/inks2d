{
  "private": true,
  "name": "inks2d",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:lib": "turbo run dev --filter=inks2d",
    "run:examples": "npm run build && turbo run dev:examples --filter=examples",
    "build": "turbo run build --filter=inks2d",
    "release": "turbo run release --filter=inks2d",
    "validate": "turbo run validate --filter=inks2d",
    "prepare": "husky install"
  },
  "devDependencies": {
    "git-commit-msg-linter": "^4.9.4",
    "husky": "^8.0.3",
    "tsup": "^6.7.0",
    "turbo": "^1.8.5",
    "typescript": "^5.0.2"
  }
}
